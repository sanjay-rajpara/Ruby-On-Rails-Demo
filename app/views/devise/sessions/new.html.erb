<!DOCTYPE html>
<html>
  <head>
    <title>ROR</title>
    <%= stylesheet_link_tag "vendors/bootstrap/dist/css/bootstrap.min.css"%>
    <%= stylesheet_link_tag "vendors/css/style.css"%>
    <%= stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/github-fork-ribbon-css/0.1.1/gh-fork-ribbon.min.css"%>
    </head>
  <body>
  <div id="login" class="center-vertical">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|%>
    <div class="well">
      <h2>Hello!</h2>
      <h6>Please Login To Your Account</h6>
    <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, :class => 'form-control',:id => 'user-tf' %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, :class => 'form-control',:id => 'pass-tf' %>
      </div>
      <div class="controls">
      <% if devise_mapping.rememberable? -%>
      <button type="button" class="btn btn-default button-rememember-me"><span class="glyphicon glyphicon-unchecked button-rememember-me-glyph"></span><span> Remember me</span></button>
      <% end -%>
      <%= f.submit 'Sign in', :class => 'btn btn-primary button-sign-in' %>
    </div>
    <div class="clearfix"></div>
      <div class="btm-links"><div id="create-account">
        <%= link_to 'Sign up', signup_new_path %>
      </div>
      <div id="forgot-password"><%- if devise_mapping.recoverable? %>
        <%= link_to "Forgot password?", new_password_path(resource_name) %>
      <% end -%></div>
      </div>
      <div class="clearfix"></div>
      <hr/>
      </div>
    </form>
    </div>
    <% end %>
    <div class="modal-form-errors modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button data-dismiss="modal" class="close">x</button>
            <h4>Whoops!</h4>
          </div>
          <div class="modal-body">It looks like there was a problem.
            <ul></ul>
          </div>
          <div class="modal-footer">
            <button data-dismiss="modal" class="btn btn-primary">OK</button>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-alert modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <!--button.close(data-dismiss='modal') x-->
            <h4></h4>
          </div>
          <div class="modal-body">
            <p></p>
          </div>
          <div class="modal-footer">
            <button data-dismiss="modal" id="ok" class="btn btn-primary">OK</button>
          </div>
        </div>
      </div>
    </div>
  <%= javascript_include_tag "vendors/jquery-2.2.3.min.js"%>
  <%= javascript_include_tag "vendors/jquery.form.min.js"%>
  <%= javascript_include_tag "vendors/bootstrap/dist/js/bootstrap.min.js"%> 
  <%= javascript_include_tag "loginValidator", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "login", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "loginController", "data-turbolinks-track" => true %>
</body>
</html>