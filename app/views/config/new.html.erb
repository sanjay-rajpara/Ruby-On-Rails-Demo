                       <%= form_for(:config , :html => {:class => new_config_path, :role => "form", :multipart => true ,:id => 'account-form'}, :url => {:action => :create}, :method => 'PUT') do |f| %>
                      <div class ="form-horizontal well">
                        <h3>New Configuration</h3>
                        <hr/>
                        <div class="form-group">
                          <%= f.label :website_name, :class => "control-label col-sm-3" %>
                          <div class="col-sm-9">
                            <%= f.text_field :website_name, :autofocus => true, :class => 'form-control', :id => 'webname-tf' %>
                          </div>
                        </div>    
                        <div class="form-group">
                          <%= f.label :email, :class => "control-label col-sm-3" %>
