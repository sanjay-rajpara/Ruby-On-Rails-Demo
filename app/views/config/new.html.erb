                            <%= f.text_field :phone, :class => 'form-control', :id => 'pnumb-tf' %>
                          </div>
                        </div>
                        <div class="form-group">
                          <%= f.label :website, :class => "control-label col-sm-3" %>
                          <div class="col-sm-9">
                            <%= f.text_field :website, :autofocus => true, :class => 'form-control', :id => 'webadd-tf' %>
